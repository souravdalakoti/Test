<script>
    $(document).ready(function(){
        $("#Submit").click(function (e) {
            var mobile=$("#mobilenumber").val();
     var fullname=$("#fullname").val();
     var email=$("#email").val();
     var resume=$("#resume").val();
     var linkedInBio=$("#linkedInBio").val();
     var Ug_cgpa=$("#Ug_cgpa").val();
     var target=$("#target").val();
     var query=$("#query").val();
     if(mobile=='' || fullname=='' || email=='' || !resume || linkedInBio=='' || Ug_cgpa=='' || target=='' || query=='')
     {
         return true;
     }
    var data = new FormData();

    data.append('fullname',fullname);
    data.append('mobile',mobile);
    data.append('email',email);
    data.append('linkdinBio',linkedInBio);
    data.append('ug_cgpa',Ug_cgpa);
    data.append('master_cgpa',$("#master_cgpa").val());
    data.append('gmatScore',$("#gmatscore").val());
    data.append('targetedSchool',target);
    data.append('query',query);
    
    var file_data = $('input[name="resume"]')[0].files[0];
    data.append("resume",file_data);

    try
    {
        var xhttp = new XMLHttpRequest();
        xhttp.onreadystatechange = function() {
            if (this.readyState == 4 && this.status == 200)
            {
                loader(0);
                window.location.href="/ThankYou"
            }
        };
        xhttp.open("POST", "/ContactUs/ContactToAdmin");
        xhttp.send(data);
        loader(1);
        return false;
    }
    catch(ex){
    
    }
        })
    })

