<!-- Profile Evaluation Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog form-modal">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Applying To Business School</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="form_data" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-12 col-lg-6 mb-4">
                                <label>Full Name</label>
                                <input id="fullname" required type="text" name="fullname" class="form-control">
                            </div>
                            <div class="col-12 col-lg-6 mb-4">
                                <label>Mobile Number</label>
                                <input id="mobilenumber" required type="text" name="mobile" class="form-control">
                            </div>
                            <div class="col-12 col-lg-6 mb-4">
                                <label>Email</label>
                                <input id="email" required type="text" name="email" class="form-control">
                            </div>
                            <div class="col-12 col-lg-6 mb-4">
                                <label>Resume</label>
                                <input  required id="resume" name="resume" type="file" accept="application/pdf,application/msword" class="form-control">
                            </div>
                            <div class="col-12 col-lg-6 mb-4">
                                <label>Linkdin Bio</label>
                                <input required id="linkedInBio" type="text" name="linkdinBio" class="form-control">
                            </div>
                            <div class="col-12 col-lg-6 mb-4">
                                <label>UG % age / CGPA</label>
                                <input id="Ug_cgpa" required type="text" name="ug_cgpa" class="form-control">
                            </div>
                            <div class="col-12 col-lg-6 mb-4">
                                <label>Masters % age / CGPA (if available)</label>
                                <input id="master_cgpa" type="text" name="master_cgpa" class="form-control">
                            </div>
                            <div class="col-12 col-lg-6 mb-4">
                                <label>GMAT/GRE Score (if available)</label>
                                <input id="gmatscore"  type="text" name="gmatScore" class="form-control">
                            </div>
                        </div>
                        <div>
                            <h5>Target Schools/Programs/Countries</h5>
                            <p>
                                Please mention any specific schools/programs/countries that you are keen on targetting.
                            </p>
                            <p>
                                We will help you evaluate more suitable options during our "School evaluation and shortlisting discussion" included with all our application builder packages.
                            </p>
                            <textarea required id="target" class="form-control mt-3" name="targetedSchool" rows="3"></textarea>
                        </div>
                        <div class="mt-3">
                            <label>Your Query</label>
                            <textarea id="query" required class="form-control" name="query" rows="3"></textarea>
                        </div>
                        <div class="mt-4 text-center">
                            <button id="Submit" class="btn btn-primary" >Submit</button>
                        </div>
                        </form>
            </div>
        </div>
    </div>
</div>
